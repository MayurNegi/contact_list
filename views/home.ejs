<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= title %>
    </title>
    <script
      src="https://kit.fontawesome.com/8c099e1e75.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-heading">Contact List</h1>

    <div id="contacts-list-container">
      <ul>
        <% for (let i of contact_list) { %>
        <li>
          <div id="details">
            <p><%= i.name %></p>
            <p><%= i.phone %></p>
          </div>
          <div class="delete-button">
            <a href="/delete-contact/?id=<%= i.id %>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>

    <form id="new-contact-form" action="/create-contact" method="POST">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input type="text" name="phone" placeholder="Enter Phone No." required />

      <button type="submit">Add Contact</button>
    </form>

    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
